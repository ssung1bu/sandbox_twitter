<!DOCTYPE html>
<html>
<head>
  <title>Fake Twitter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<ul>
			<li><%= link_to('All Tweets', tweets_url) %></li>
			<li><%= link_to('New Tweet', new_tweet_url) %></li>
			<% if user_signed_in? %>
				<li>You are signed in as <%= current_user.email %></li>
				<li><%= link_to('Sign Out', destroy_user_session_url, method: :delete) %></li>
			<% else %>
				<li>You are not signed in</li>
				<li><%= link_to('Sign In', new_user_session_url) %></li>
			<% end %>
		</ul>
	</header>
	<div class="flash-message"><%= flash[:info] %></div>
	<%= yield %>
</body>
</html>